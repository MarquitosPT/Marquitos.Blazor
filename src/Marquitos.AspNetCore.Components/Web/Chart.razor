@inherits Component
<div>
    <svg viewBox="0 0 100 100" height="300px" width="300px" xmlns="http://www.w3.org/2000/svg">
        <defs>
            <pattern x="0" y="0" width="25" height="25" patternUnits="userSpaceOnUse" viewBox="0 0 100 100" id="pattern-0">
                <line style="stroke: rgb(0, 0, 0); stroke-linecap: square;" x1="0" y1="0" x2="0" y2="100"></line>
                <line style="stroke: rgb(0, 0, 0); stroke-linecap: square;" x1="0" y1="0" x2="100" y2="0"></line>
            </pattern>
        </defs>

        <rect x="0" y="0" width="100" height="100" style="stroke: currentColor;fill: url(#pattern-0)"></rect>
    </svg>

    <div style="display:none"><CascadingValue TValue="IChart" Value="this">@ChildContent</CascadingValue></div>
</div>

