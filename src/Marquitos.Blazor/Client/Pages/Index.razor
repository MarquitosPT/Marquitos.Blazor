<section>
    <h3>Dialog</h3>
    <p>
        <div class="bd-example">
            <Button OnClick="async () => { await SampleDialog.ShowAsync(); }">Show dialog</Button>

            <Dialog @ref="SampleDialog" OnShow="async () => { await CloseButton.FocusAsync(); }">
                <DialogHeader>Sample dialog</DialogHeader>
                <DialogBody>...</DialogBody>
                <DialogFooter>
                    <Button @ref="CloseButton" OnClick="async () => { await SampleDialog.HideAsync(); }">Close</Button>
                </DialogFooter>
            </Dialog>
        </div>
        <div class="bd-code">
            <code>
                <pre>
&lt;Dialog @@ref=&quot;SampleDialog&quot; OnShow=&quot;async () =&gt; { await CloseButton.FocusAsync(); }&quot;&gt;
    &lt;DialogHeader&gt;Sample dialog&lt;/DialogHeader&gt;
    &lt;DialogBody&gt;...&lt;/DialogBody&gt;
    &lt;DialogFooter&gt;
        &lt;Button @@ref=&quot;CloseButton&quot; OnClick=&quot;async () =&gt; { await SampleDialog.HideAsync(); }&quot;&gt;Close&lt;/Button&gt;
    &lt;/DialogFooter&gt;
&lt;/Dialog&gt;
                </pre>
            </code>
        </div>
    </p>
</section>

