    <p>
        <Accordion>
            <AccordionItem IsOpen="true">
                <Header>Item 1</Header>
                <Body>
                    Content of item 1
                </Body>
            </AccordionItem>
            <AccordionItem>
                <Header>Item 2</Header>
                <Body>
                    Content of item 2
                </Body>
            </AccordionItem>
        </Accordion>
    </p>
</section>

<section>
